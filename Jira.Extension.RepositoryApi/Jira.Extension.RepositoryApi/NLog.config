<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.nlog-project.org/schemas/NLog.xsd NLog.xsd"
      autoReload="true"
      throwExceptions="false"
      internalLogLevel="Off" internalLogFile="c:/temp/nlog-internal.log">

  <variable name="logPath" value="${basedir}/logs/${shortdate}.log"/>
  <variable name="layout" value="${longdate} ${uppercase:${level}} ${message} ${exception}"/>

  <targets>
    <target name="fileTarget" xsi:type="File" fileName="${logPath}" layout="${layout}"></target>
  </targets>

  <rules>
    <logger name="*" minlevel="Warn" writeTo="fileTarget"/>
  </rules>
  
</nlog>