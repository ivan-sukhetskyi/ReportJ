{
    "manifest_version": 2,
    "name": "ReportJ",
    "description": "The reporting helper for JIRA system.",
    "homepage_url": "https://github.com/mishani0x0ef/reportj",
    "version": "2.4",
    "permissions": [
        "storage",
        "activeTab",
        "contextMenus"
    ],
    "background": {
        "scripts": [
            "build/manifest.js",
            "build/vendor.js",
            "build/background.js"
        ],
        "persistent": false
    },
    "browser_action": {
        "default_icon": "img/logo.png",
        "default_title": "ReportJ",
        "default_popup": "popup.html"
    },
    "options_page": "options.html",
    "icons": {
        "16": "img/logo.png",
        "48": "img/logo.png",
        "128": "img/logo128x128.png"
    },
    "content_scripts": [
        {
            "matches": [
                "*://*/*"
            ],
            "js": [
                "build/manifest.js",
                "build/vendor.js",
                "build/content.js"
            ]
        }
    ]
}